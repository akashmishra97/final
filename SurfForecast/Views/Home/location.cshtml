@{
    ViewData["Title"] = "Location";
}
@model LocationViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>

</head>

<body>

    <h1>Add new location</h1>
    <form method="post" action="/Home/AddLocation">
        <div class="add-new-container">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="Latitude"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude"></span>
            </div>

            <div class="form-group">
                <label asp-for="Longitude"></label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-md active" aria-pressed="true">Add</button>
        </div>
    </form>

</body>
</html>
